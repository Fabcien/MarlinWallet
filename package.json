{
  "name": "eCashWalletApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "start": "react-native start",
    "build-web": "pushd web && npm run build && popd",
    "copy-web-ios": "cp -r web/dist/* ios/eCashWalletApp/web/",
    "copy-web-android": "mkdir -p android/app/src/main/assets/web/ && cp -r web/dist/* android/app/src/main/assets/web/",
    "ios": "npm run build-web && npm run copy-web-ios && react-native run-ios",
    "android": "npm run build-web && npm run copy-web-android && react-native run-android",
    "wearos": "cd android && ./gradlew :wear:installDebug"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.74.7",
    "react-native-haptic-feedback": "^2.3.3",
    "react-native-keychain": "^10.0.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-webview": "^13.6.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.74.89",
    "@react-native/eslint-config": "0.74.89",
    "@react-native/metro-config": "0.74.89",
    "@react-native/typescript-config": "0.74.89",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "eslint": "^8.19.0",
    "prettier": "2.8.8",
    "react-test-renderer": "18.2.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
